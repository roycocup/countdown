{
  "dependencies": {
    "babel-cli": "^6.26.0",
    "concurrently": "^6.0.0",
    "sass": "^1.32.8",
    "typescript": "^4.1.5",
    "yarn": "^1.22.10"
  },
  "scripts": {
    "watch": "yarn sass --watch style.sass style.css",
    "css": "yarn sass style.sass style.css",
    "tsc": "yarn tsc app.ts app.js",
    "build": "concurrently --kill-others 'yarn tsc' 'yarn css'",
    "serve": "node server.js",
    "start": "concurrently --kill-others 'yarn serve' 'yarn watch'"
  }
}
